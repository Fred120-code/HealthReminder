datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  phone     String?
  reminders Reminder[]
  chats     ChatResponse[]
}

model Reminder {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  title     String
  time      DateTime
  frequency String
  user      User     @relation(fields: [userId], references: [id])
}

model ChatResponse {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  question  String
  answer    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}